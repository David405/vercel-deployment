{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "allowJs": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "sourceMap": true
    },
    "include": ["src/**/*", "src/types"],
    "exclude": ["node_modules"]
  }